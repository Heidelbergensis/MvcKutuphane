@model MvcKutuphane.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>KitapGetir</h2>

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div class="form-group">
        <label>Kitap ID</label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Kategori</label>
        @Html.TextBoxFor(k => k.KATEGORI, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Yazar</label>
        @Html.TextBoxFor(k => k.YAZAR, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Basım Yılı</label>
        @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Yayın Evi</label>
        @Html.TextBoxFor(k => k.YAYINEVI, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Sayfa</label>
        @Html.TextBoxFor(k => k.SAYFA, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Durum</label>
        @Html.TextBoxFor(k => k.DURUM, new { @class = "form-control" })
    </div>
    <button style="margin-top: 15px;" class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
}